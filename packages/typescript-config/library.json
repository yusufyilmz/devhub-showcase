{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "incremental": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}