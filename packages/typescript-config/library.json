{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "incremental": false,
    }
}
