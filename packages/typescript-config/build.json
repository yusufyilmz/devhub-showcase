{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6",
        "module": "esnext",
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}