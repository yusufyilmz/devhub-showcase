{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
