{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "LOG_LEVEL",
        "APPLICATION_NAME",
        "OPENAI_API_KEY",
        "DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "deploy": {
      "dependsOn": ["build", "^deploy"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "env": [
        "NODE_ENV",
        "LOG_LEVEL",
        "APPLICATION_NAME",
        "OPENAI_API_KEY",
        "DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "types:check": {
      "dependsOn": [
        "^types:check"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ]
    }, 
    "clean": {
      "dependsOn": [
        "^clean"
      ]
    }
  }
}